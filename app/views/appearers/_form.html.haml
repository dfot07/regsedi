= simple_form_for [@act, @appearer] do |f|
  = f.error_notification

  .form-inputs

    = f.input :tipo_persona

    = f.input :razon_social

    = f.input :apellido

    = f.input :nombre

    = f.input :tipo_interviniente

    = f.input :calidad_compareciente

    = f.input :tipo_identificacion

    = f.input :identificacion

    = f.input :estado_civil

    = f.input :apellido_conyuge

    = f.input :identificacion_conyuge

    = f.input :separacion_bien


  .form-actions
    = f.button :submit

  %form.form-horizontal
    %fieldset
      %legend Legend
      .form-group
        %label.col-md-2.control-label{:for => "#{:tipo_persona}"} Tipo Persona
        .col-md-10
          %input#inputEmail.form-control{:placeholder => "Email", :type => "email"}
            = f.text :tipo_persona
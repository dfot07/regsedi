= simple_form_for [@act, @assessment], {html: { class: 'form-horizontal' }} do |f|
  -if @assessment.errors.any?
    #error_explanation
      %h3.chip
        = "#{@assessment.errors.count} errores encontrados:"
        <i class="material-icons">close</i>
      %ul
        -@assessment.errors.full_messages.each do |msg|
          %li.chip.waves-effect.waves-light.btn-large
            =msg
            <i class="material-icons">close</i>
  
  .form-group
    =f.label :posee_gravamen, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :posee_gravamen, class: "form-control", placeholder: "Posee o no Gravamen"
  .form-group
    =f.label :tipo_gravamen, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :tipo_gravamen, class: "form-control", placeholder: "Tipo de Gravamen"
  .form-group
    =f.label :genera_gravamen, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :genera_gravamen, class: "form-control", placeholder: "Genera o no Gravamen"
  .form-group
    =f.label :tipo_genera_gravamen, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :tipo_genera_gravamen, class: "form-control", placeholder: "Tipo de Gravamen que genera"
  .form-group
    =f.label :fecha_constitucion, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :fecha_constitucion, class: "form-control", html5: true
  .form-group
    =f.label :fecha_cancelacion, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :fecha_cancelacion, class: "form-control", html5: true

  .form-group
    .row.center-xs
      .col-xs-5
        = f.button :submit, class: "btn btn-raised btn-info btn-lg", value: "Guardar"
= simple_form_for(@search, html: { class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-group
    =f.label :repertorio, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :repertorio, class: "form-control", placeholder: "Repertorio"
  .form-group
    =f.label :frepertorio, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :frepertorio, class: "form-control", html5: true
  .form-group
    =f.label :inscripcion, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :inscripcion, class: "form-control", placeholder: "Inscripción"
  .form-group
    =f.label :finscripcion, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :finscripcion, class: "form-control", html5: true
  .form-group
    =f.label :apellidos, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :apellidos, class: "form-control", placeholder: "Apellidos"
  .form-group
    =f.label :nombres, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :nombres, class: "form-control", placeholder: "Nombres"
  .form-group
    =f.label :identificacion, class: "col-xs-3 control-label"
    .col-xs-7
      = f.input_field :identificacion, class: "form-control", placeholder: "Número de Identifiación"

  .form-group
    .row.center-xs
      .col-xs-5
        = f.button :submit, class: "btn btn-raised btn-info btn-lg", value: "Buscar"